{
  "name": "flynova-acars-tracker",
  "version": "2.0.0",
  "description": "FlyNova ACARS Tracker for MSFS, X-Plane & P3D",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --watch",
    "build": "electron-builder --win --x64",
    "build:portable": "electron-builder --win portable",
    "build:all": "electron-builder --win --x64 --ia32"
  },
  "keywords": [
    "ACARS",
    "Flight",
    "Tracker",
    "MSFS",
    "X-Plane",
    "P3D",
    "Virtual Airline",
    "Flight Simulator"
  ],
  "author": {
    "name": "FlyNova",
    "email": "support@flynova.com"
  },
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "axios": "^1.6.2",
    "node-simconnect": "^4.0.0"
  },
  "build": {
    "appId": "com.flynova.acars",
    "productName": "FlyNova ACARS Tracker",
    "copyright": "Copyright Â© 2025 FlyNova",
    "directories": {
      "output": "dist",
      "buildResources": "build"
    },
    "files": [
      "main.js",
      "src/**/*",
      "logos/**/*",
      "assets/**/*",
      "config.js",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.png",
      "publisherName": "FlyNova",
      "verifyUpdateCodeSignature": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "FlyNova ACARS",
      "license": "LICENSE.txt",
      "language": "1033"
    }
  }
}
